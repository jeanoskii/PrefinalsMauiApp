<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrefinalsMauiApp.Dogs"
             Title="Dogs">
    <VerticalStackLayout>
        <Label 
            x:Name="lblDogs"
            Text="Dogs API"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="32"
            />
        <Image
            x:Name="imgDogs"
            WidthRequest="300"
            HeightRequest="300"
            />
        <Button
           Text="Fetch"
           x:Name="btnFetch"
           Clicked="btnFetch_Clicked"
           HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>