<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrefinalsMauiApp.Bored"
             Title="Bored">
    <VerticalStackLayout>
        <Label 
            Text="Bored API"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="32"/>
        <Label
            x:Name="lblActivity"
            HorizontalOptions="Center"
            FontSize="40"/>
        <Label
            Text="Bored? Click the button below and try the random activity!"
            HorizontalOptions="Center"
            />
        <Button
           Text="I am bored!"
           x:Name="btnBored"
           Clicked="btnBored_Clicked"
           HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>